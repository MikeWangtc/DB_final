dbrp "monitorTemp_ECv5U7QdTDrm77NVjpiSXk"."autogen"
var data = stream
    |from()
        .measurement('temperature')
    |window()
        .period(10s)
        .every(10s)

data
    @tTest()
        // specify the hotend field
        .field('hotend')
        // Keep a 1h rolling window
        .size(3600)
    |alert()
        .id('hotend')
        .crit(lambda: 0 < 100)
        .log('/tmp/kapacitor_udf/monitorTemp_ECv5U7QdTDrm77NVjpiSXk_failure.log')
        |influxDBOut()
            .database('Mike')
            .retentionPolicy('autogen')
            .measurement('monitorTemp_ECv5U7QdTDrm77NVjpiSXk_alert')
    
data
    |influxDBOut()
        .create()
        .database('Mike')
        .retentionPolicy('autogen')
        .measurement('monitorTemp_ECv5U7QdTDrm77NVjpiSXk')
        .tag('hotend', 'a')
        .tag('bed', 'b')
        .tag('air', 'c')

